<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="255dp"
    android:layout_marginTop="16dp"
    android:background="#FEFEFE"
    android:orientation="vertical"
    android:padding="6dp">

    <RelativeLayout
        android:id="@+id/banner_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_heightPercent="10%">

    </RelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/banner_top"
        android:background="#f65893"
        app:layout_heightPercent="45%"
        app:layout_widthPercent="50%">

        <ImageView
            android:id="@+id/item_1_ig"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_photo"
            app:layout_heightPercent="65%"
            app:layout_marginTopPercent="4%"
            app:layout_widthPercent="82%" />

        <TextView
            style="@style/TextCaptionLight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/item_1_ig"
            android:layout_below="@+id/item_1_ig"
            android:text="@string/action_sign_in"
            app:layout_widthPercent="82%" />

    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>